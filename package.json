{
  "name": "re-mermaid",
  "version": "1.0.0",
  "description": "Atlassian Forge app for Mermaid diagrams in Confluence and Jira",
  "main": "src/resolvers/index.js",
  "scripts": {
    "build": "npm run build:confluence && npm run build:jira",
    "build:confluence": "cd static/confluence-macro && npm run build",
    "build:jira": "cd static/jira-panel && npm run build",
    "lint": "forge lint",
    "deploy": "npm run build && forge deploy",
    "install:all": "npm install && cd static/confluence-macro && npm install && cd ../jira-panel && npm install"
  },
  "keywords": [
    "atlassian",
    "forge",
    "mermaid",
    "confluence",
    "jira"
  ],
  "license": "MIT",
  "overrides": {
    "node-forge": "^1.3.2",
    "qs": "^6.14.1",
    "tmp": "^0.2.4",
    "on-headers": "^1.1.0",
    "tar-fs": "^2.1.4",
    "glob@>=10.2.0 <10.5.0": "^10.5.0"
  },
  "devDependencies": {
    "@forge/cli": "^12.13.0"
  },
  "dependencies": {
    "@forge/api": "^6.4.3",
    "@forge/resolver": "^1.6.0"
  }
}
